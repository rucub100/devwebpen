{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "webpen",
  "version": "0.1.0",
  "identifier": "de.curbanov.webpen",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "webpen",
        "minWidth": 800,
        "width": 1024,
        "minHeight": 600,
        "height": 768,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-window-show",
          "permissions": ["core:window:allow-show"],
          "windows": ["main"]
        }
      ]
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/webpen-daemon"
    ]
  }
}
